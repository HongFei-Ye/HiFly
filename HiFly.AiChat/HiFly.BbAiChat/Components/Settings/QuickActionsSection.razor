@using Microsoft.AspNetCore.Components

<SettingsSection Title="快捷操作" IconClass="fas fa-bolt" CssClass="actions-section">
    
    <div class="action-buttons">
        <!-- 工具类操作 -->
        <button class="action-btn export-btn @GetButtonStateClass("export")" 
                @onclick="HandleExportClick" 
                disabled="@IsDisabled"
                title="导出当前对话记录">
            <i class="fas fa-download"></i>
            <span>导出对话</span>
        </button>
        
        <button class="action-btn share-btn @GetButtonStateClass("share")" 
                @onclick="HandleShareClick" 
                disabled="@IsDisabled"
                title="生成分享链接">
            <i class="fas fa-share-alt"></i>
            <span>分享链接</span>
        </button>
        
        <!-- 设置类操作 -->
        <button class="action-btn theme-btn @GetButtonStateClass("theme")" 
                @onclick="HandleThemeClick" 
                disabled="@IsDisabled"
                title="切换明暗主题">
            <i class="fas fa-palette"></i>
            <span>主题切换</span>
        </button>
        
        <button class="action-btn reset-btn @GetButtonStateClass("reset")" 
                @onclick="HandleResetClick" 
                disabled="@IsDisabled"
                title="重置所有设置为默认值">
            <i class="fas fa-undo-alt"></i>
            <span>重置设置</span>
        </button>
        
        @if (AdditionalActions != null)
        {
            @AdditionalActions
        }
    </div>

</SettingsSection>
