@inherits LayoutComponentBase
@inject ILayoutSetService LayoutSetService
@inject ILayoutDataService LayoutDataService

<BootstrapBlazorRoot>
    <Layout ShowGotoTop="@LayoutSetService.ShowGotoTop" ShowCollapseBar="@LayoutSetService.ShowCollapseBar"
            ShowFooter="@LayoutSetService.ShowFooter" SideWidth="@LayoutSetService.SideWidth"
            IsPage="@LayoutSetService.IsPage" IsFullSide="@LayoutSetService.IsFullSide"
            IsFixedHeader="@LayoutSetService.IsFixedHeader" IsFixedFooter="@LayoutSetService.IsFixedFooter"
            ShowSplitBar="@LayoutSetService.ShowSplitebar" SidebarMinWidth="@LayoutSetService.SidebarMinWidth"
            SidebarMaxWidth="@LayoutSetService.SidebarMaxWidth" TabStyle="@LayoutSetService.TabStyle"
            ShowToolbar="@LayoutSetService.ShowToolbar" ShowTabContextMenu="@LayoutSetService.ShowTabContextMenu"
            ShowTabInHeader="@LayoutSetService.ShowTabInHeader" ShowTabExtendButtons="@LayoutSetService.ShowTabExtendButtons"
            TabDefaultUrl="@LayoutSetService.TabDefaultUrl" UseTabSet="@LayoutSetService.UseTabSet"
            IsFixedTabHeader="@LayoutSetService.IsFixedTabHeader" Menus="@LayoutSetService.Menus"
            class="@LayoutSetService.Theme">
        @* AdditionalAssemblies="new[] { GetType().Assembly }" *@
        <Header>
            @if (LayoutSetService.ShowTabInHeader == false)
            {
                @* <span class="ms-3 flex-sm-fill d-none d-sm-block"></span> *@
                @* <span class="ms-3 flex-sm-fill d-none d-sm-block"><a class="text-white" target="_blank" href="/">返回前台</a></span> *@
                <span class="ms-3 flex-sm-fill d-none d-sm-block"><a class="text-white" @onclick="@GoToReceptionHome">返回首页</a></span>

                <div class="flex-fill d-sm-none">
                </div>

                @* <Widget></Widget> *@
            }

            <Logout ImageUrl="@LayoutDataService.AvatarUrl" DisplayName="@LayoutDataService.NowRoleName" UserName="@LayoutDataService.LoginUserName">
                <LinkTemplate>
                    @foreach (var (menu, index) in LayoutDataService.LogoutMenus.Select((value, idx) => (value, idx)))
                    {
                        <label class="@((index == 0 ? "" : "ms-2"))">
                            <a href="@menu.Url"><i class="@menu.Icon me-1"></i>@menu.Text</a>
                        </label>
                    }
                </LinkTemplate>
            </Logout>

            <div class="layout-drawer" @onclick="@(e => IsOpen = !IsOpen)"><i class="fa fa-gears"></i></div>
        </Header>
        <Side>
            <div class="layout-banner">
                <img class="layout-logo" src="@LayoutDataService.SideLogoSrc" />
                <div class="layout-title">
                    <span>@LayoutDataService.SideTitle</span>
                </div>
            </div>
        </Side>
        <Main>
            <CascadingValue Value="this" IsFixed="true">
                @Body
            </CascadingValue>
        </Main>
        <Footer>
            <div class="text-center flex-fill">
                <a class="page-layout-demo-footer-link" href="@LayoutDataService.FooterHref" target="_blank">@LayoutDataService.FooterText</a>
            </div>
        </Footer>
        <NotFound>
            <p>很抱歉，这个地址没有任何信息...</p>
        </NotFound>
    </Layout>
    <Drawer Placement="Placement.Right" @bind-IsOpen="@IsOpen" IsBackdrop="true">
        <div class="layout-drawer-body">
            <div class="btn btn-info w-100" @onclick="@(e => IsOpen = false)">点击关闭</div>
            <GroupBox Title="布局调整">
                <div class="row">
                    <div class="col-6">
                        <LayoutPreview IsFullSide="true" IsActive="@LayoutSetService.IsFullSide" OnClick="OnSideChanged"></LayoutPreview>
                    </div>
                    <div class="col-6">
                        <LayoutPreview IsFullSide="false" IsActive="@(!LayoutSetService.IsFullSide)" OnClick="OnSideChanged"></LayoutPreview>
                    </div>
                </div>
            </GroupBox>

            <GroupBox Title="固定调整">
                <div class="row">
                    <div class="col-6">
                        <Switch @bind-Value="@LayoutSetService.IsFixedHeader" OnColor="@Color.Success"></Switch>
                    </div>
                    <div class="col-6">
                        <span class="cell-label">固定页头</span>
                    </div>
                    <div class="col-6">
                        <Switch @bind-Value="@LayoutSetService.IsFixedFooter" OnColor="@Color.Success"></Switch>
                    </div>
                    <div class="col-6">
                        <span class="cell-label">固定页脚</span>
                    </div>
                    <div class="col-6">
                        <Switch @bind-Value="@LayoutSetService.ShowFooter" OnColor="@Color.Success"></Switch>
                    </div>
                    <div class="col-6">
                        <span class="cell-label">显示页脚</span>
                    </div>
                </div>
            </GroupBox>

            <GroupBox Title="更多设置">
                <div class="row">
                    <div class="col-6">
                        <Switch @bind-Value="@LayoutSetService.UseTabSet" OnColor="@Color.Success"></Switch>
                    </div>
                    <div class="col-6">
                        <span class="cell-label">@(LayoutSetService.UseTabSet ? "多标签" : "单页")</span>
                    </div>
                    <div class="col-6">
                        <Switch @bind-Value="@LayoutSetService.IsFixedTabHeader" OnColor="@Color.Success"></Switch>
                    </div>
                    <div class="col-6">
                        <span class="cell-label">固定标签页</span>
                    </div>
                    <div class="col-6">
                        <Switch @bind-Value="@LayoutSetService.ShowTabInHeader" OnColor="@Color.Success"></Switch>
                    </div>
                    <div class="col-6">
                        <span class="cell-label">@(LayoutSetService.ShowTabInHeader ? "顶栏标签" : "正常标签")</span>
                    </div>
                </div>
            </GroupBox>
        </div>
    </Drawer>
</BootstrapBlazorRoot>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

