@inject IUnitService UnitService
@inject ITeamService TeamService

@typeparam TContext where TContext : DbContext
@typeparam TUnitTeam where TUnitTeam : class, IUnitTeam, new()
@typeparam TUnit where TUnit : class, IUnit, new()
@typeparam TTeam where TTeam : class, ITeam, new()

<PageTitle>单位小组关系</PageTitle>

<TItemTable TContext="TContext" TItem="TUnitTeam">

    <TableColumns>

        <TableColumn @bind-Field="@context.UnitId" Text="单位名称" Filterable="true" Sortable="true">
            <Template Context="value">
                <div>@UnitService.GetShortNameById(value.Value)</div>
            </Template>
            <EditTemplate Context="value">
                <div class="col-12 col-sm-6">
                    <UnitVirtualizeSelect TContext="@TContext" TUnit="@TUnit" @bind-Value="@value.UnitId"></UnitVirtualizeSelect>
                </div>
            </EditTemplate>
            <FilterTemplate>
                <UnitIdFilter TContext="@TContext" TUnit="@TUnit"></UnitIdFilter>
            </FilterTemplate>
        </TableColumn>
        <TableColumn @bind-Field="@context.TeamId" Text="小组名称" Filterable="true" Sortable="true">
            <Template Context="value">
                <div>@TeamService.GetShortNameById(value.Value)</div>
            </Template>
            <EditTemplate Context="value">
                <div class="col-12 col-sm-6">
                    <TeamVirtualizeSelect TContext="@TContext" TTeam="@TTeam" @bind-Value="@value.TeamId"></TeamVirtualizeSelect>
                </div>
            </EditTemplate>
            <FilterTemplate>
                <TeamIdFilter TContext="@TContext" TTeam="@TTeam"></TeamIdFilter>
            </FilterTemplate>
        </TableColumn>

    </TableColumns>

</TItemTable>
